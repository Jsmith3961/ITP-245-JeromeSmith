@using ITP245_Sports_Model
@model Dictionary<string, List<ISports> >

@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Sports Teams</h1>
        
    </section>

    <div class="row">
        @foreach (var Sports in Model)
        {
        <section class="col-md-4" aria-labelledby="gettingStartedTitle">
            <h2>@Sports.Key</h2>
            <p>
                @foreach (var team in Sports.Value)

                {
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li>
                                    <h3>@team.Name</h3>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
            </p>
        </section>
        }
        </div>
</main>